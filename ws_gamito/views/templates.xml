<odoo>
    <data>
        <template id="contact_inherit" inherit_id="base.contact">
            <!-- Insertar el campo ref después del último div hijo dentro de address -->
            <xpath expr="//address/div[last()]" position="after">
                <div t-if="object.ref">
                    Ref: <span t-esc="object.ref"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>