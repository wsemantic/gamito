<odoo>
    <record id="action_print_delivery_button" model="ir.actions.server">
        <field name="name">Print Delivery Order</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">action = model.action_print_delivery()</field>
    </record>

    <!-- Informe para imprimir el albarÃ¡n desde la orden de venta -->
    <record id="report_sale_order_delivery" model="ir.actions.report">
        <field name="name">Delivery Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale.nota_pedido</field>
        <!--<field name="report_file">sale.report_saleorde</field>-->
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Delivery Order - %s' % (object.name)</field>
    </record>
</odoo>